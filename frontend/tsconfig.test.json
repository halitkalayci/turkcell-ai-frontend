{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "types": ["vitest", "vite/client", "node"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/test/**/*.ts",
    "src/test/**/*.tsx",
    "src/tests/**/*.test.ts",
    "src/tests/**/*.test.tsx"
  ]
}